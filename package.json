{
  "name": "saucedemo-cypress-web",
  "version": "1.0.0",
  "description": "E2E tests for SauceDemo with Cypress",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "open": "cypress open --e2e",
    "test": "cypress run",
    "test:headed": "cypress run --headed --browser chrome",
    "test:chrome": "cypress run --browser chrome",
    "test:grep": "cypress run --env grepTags=@smoke",
    "report:merge": "npx mochawesome-merge cypress/reports/*.json > cypress/reports/mochawesome.json",
    "report:html": "npx marge cypress/reports/mochawesome.json -f index -o cypress/reports/html",
    "report": "npm run report:merge && npm run report:html",
    "lint": "eslint .",
    "format": "prettier -w .",
    "prepare": "husky"
  },
  "devDependencies": {
    "@cypress/grep": "^5.0.0",
    "@testing-library/cypress": "^10.1.0",
    "cypress": "^15.5.0",
    "eslint": "^9.11.0",
    "eslint-plugin-cypress": "^2.15.1",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0",
    "prettier": "^3.3.3"
  }
}
